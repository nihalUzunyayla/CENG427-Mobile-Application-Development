<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings.SettingsFragment">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonProfileSettings"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@color/white"
            android:gravity="start|center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="@string/profile_settings"
            android:textAllCaps="false"
            android:textColor="#806285"
            android:textSize="22sp"
            android:textStyle="bold" />

    <View
        android:id="@+id/dividerLine1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/buttonProfileSettings"
        android:background="@color/black" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonAccountSettings"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/white"
        android:text="@string/account_settings"
        android:textColor="#806285"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:gravity="start|center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_below="@+id/dividerLine1"/>
    <View
        android:id="@+id/dividerLine2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/buttonAccountSettings"
        android:background="@color/black" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonLogOut"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/dividerLine2"
        android:layout_marginTop="455dp"
        android:background="@color/item_text_purple"
        android:text="@string/logOut"
        android:textColor="@color/white"
        android:textSize="27sp"
        android:textStyle="bold" />


</RelativeLayout>
