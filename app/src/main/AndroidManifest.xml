<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.telephony"
        android:required="true" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app"
        android:supportsRtl="true"
        android:theme="@style/Theme.PawRescue"
        tools:targetApi="31">
        <activity
            android:name=".AccountSettingsActivity"
            android:exported="false"
            android:label="Account Settings"/>
        <activity
            android:name=".ProfileSettingsActivity"
            android:exported="false"
            android:label="@string/profile_settings" />
        <activity
            android:name=".LostFoundPlatformActivity"
            android:exported="false"
            android:label="@string/title_activity_lost_found_platform" />
        <activity
            android:name=".PetFactsActivity"
            android:exported="false" />

      <!-- SignUpActivity, uygulamanın başlangıç ekranı olarak belirlendi -->
        <activity
            android:name=".SignUpActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignInActivity"
            android:label="@string/sign_in"
            android:parentActivityName=".SignUpActivity" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:parentActivityName=".SignInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DonationActivity"
            android:label="@string/donation"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".DisplayPetActivity"
            android:exported="false"
            android:label="@string/adoptPet_title" />
        <activity
            android:name=".AddPetActivity"
            android:exported="false"
            android:label="@string/addPet" />
        <activity
            android:name=".EmergencyActivity"
            android:exported="false"
            android:label="@string/emergency_call" />
    </application>

</manifest>