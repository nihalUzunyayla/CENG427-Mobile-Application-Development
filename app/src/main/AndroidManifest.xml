<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app"
        android:supportsRtl="true"
        android:theme="@style/Theme.PawRescue"

        tools:targetApi="31">

        <!-- SignUpActivity, uygulamanın başlangıç ekranı olarak belirlendi -->
        <activity
            android:name=".SignUpActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- SignInActivity, SignUpActivity'den sonra açılacak ekran -->
        <activity
            android:name=".SignInActivity"
            android:label="@string/sign_in"
            android:parentActivityName=".SignUpActivity">
        </activity>

        <!-- MainActivity, SignInActivity'den sonra açılacak ekran -->
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:parentActivityName=".SignInActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>
